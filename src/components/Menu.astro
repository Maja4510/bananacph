---
import Link from "./Link.astro";
const { variant } = Astro.props;

---

<body>
    


<nav>
  <div class="menu">
    <!-- Hamburgermeny för mobil -->
    <div class="hamburger">
      <span></span>
      <span></span>
      <span></span>
    </div>

    <!-- Länkar och logotyp -->
    <div class="menu-links hidelinks">
      <div class="left-links">
        <Link variant={variant}>MISSION</Link>
        <Link variant={variant}>ENERGY BARS</Link>
      </div>
      
      <a href="/src/pages/filippa.astro">
        <img src="/img/bananalogo.svg" alt="logo" class="logo">
    </a>
      <div class="right-link">
        <Link variant={variant}>JOIN THE COMMUNITY</Link>
      </div>
    </div>
  </div>
</nav>

<style>

    body {
        margin: 0;
        padding: 0;
    }
  /* Baslayout */
  .menu {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 5px;
    
    z-index: 1000;
    position: fixed;
    width: 100%;
    
  }

  .menu-links {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding-right: 20px;

  }



  /* Hamburgermeny (dold som standard) */
  .hamburger {
    display: none;
    flex-direction: column;
    justify-content: space-between;
    width: 40px;
    height: 35px;
    cursor: pointer;
    padding: 15px;
  }

  .hamburger span {
    display: block;
    width: 100%;
    height: 3px;
    background-color: #FEF8E2;
  }

  @media (max-width: 768px) {
    .hamburger {
      display: flex;
      z-index: 10000;
    }

    .menu-links {
      flex-direction: column;
      align-items: left;
      background-color: #67815A;
      width: 100%;
      position: absolute;
      top: 0px;
      left: 0;
      padding: 30px;
    }

    .hidelinks  {
      display: none;
    }

    .menu-links.active {
      display: flex;
    }

    .logo {
      display: none;
    }



    .left-links,
    .right-link {
      margin-bottom: 10px;
    }
  }
</style>

<script>
const hamburger = document.querySelector('.hamburger');
const menuLinks = document.querySelector('.menu-links');

hamburger.addEventListener('click', () => {
    menuLinks.classList.toggle('hidelinks');
});
</script>

  

</body>
  
